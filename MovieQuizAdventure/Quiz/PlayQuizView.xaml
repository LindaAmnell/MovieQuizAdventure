<UserControl x:Class="MovieQuizAdventure.PlayQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieQuizAdventure" xmlns:models="clr-namespace:MovieQuizAdventure.Models" xmlns:local1="clr-namespace:MovieQuizAdventure.Converters" d:DataContext="{d:DesignInstance Type=models:PlayQuizGame}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <local1:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Button x:Name="BackButton"
                Content="Quit"
                Width="100" Height="40"
                Margin="10"
                Background="#1C1F3B"
                Foreground="#C3A6FF"
                BorderBrush="#5E5BA8"
                FontWeight="Bold"
                FontFamily="ROG Fonts"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Quit" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock FontWeight="bold"
                       Foreground="#C3A6FF" FontFamily="ROG Fonts"
                       FontSize="30" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="20"  Text="{Binding Quiz.Title}" />
                
            <TextBlock Text="{Binding CurrentQuestion.Statement }" 
                       Foreground="#C3A6FF" FontFamily="Felix Titling" FontWeight="Bold"
                       FontSize="18" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="10" 
                       TextWrapping="Wrap"/>

            <TextBlock  x:Name="TextBlockAnswer"  Foreground="#C3A6FF" FontFamily="Felix Titling"
                   Text="{Binding ScoreText}" FontSize="18" HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>
               
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Source="{Binding CurrentImageUrl}"
                       Height="250"
                       Width="250"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Visibility="{Binding CurrentImageUrl, Converter={StaticResource BoolToVisibilityConverter}}"/>   
                
                <Button Content="{Binding CurrentQuestion.Answers[0]}" Grid.Row="2" Grid.Column="0"
                     Width="200" Height="40" Background="#1C1F3B"
                    Foreground="#C3A6FF" BorderBrush="#5E5BA8"
                    FontWeight="Bold" FontFamily="Felix Titling" Margin="5" Padding="5"
                    Click="AnswerBtn_Click" Tag="0"/>

                <Button Content="{Binding CurrentQuestion.Answers[1]}" Grid.Row="3" Grid.Column="1"
                    Width="200" Height="40" Background="#1C1F3B"
                    Foreground="#C3A6FF" BorderBrush="#5E5BA8" FontWeight="Bold"
                    FontFamily="Felix Titling" Margin="5" Padding="5"
                    Click="AnswerBtn_Click"  Tag="1"/>

                <Button Content="{Binding CurrentQuestion.Answers[2]}"  Grid.Row="4" Grid.Column="0"
                     Width="200" Height="40" Background="#1C1F3B"
                    Foreground="#C3A6FF" BorderBrush="#5E5BA8"
                    FontWeight="Bold" FontFamily="Felix Titling" Padding="5"
                    Margin="5" Click="AnswerBtn_Click"  Tag="2"/>

                <Button Content="{Binding CurrentQuestion.Answers[3]}"  Grid.Row="5" Grid.Column="1"
                     Width="200" Height="40" Background="#1C1F3B"
                    Foreground="#C3A6FF" BorderBrush="#5E5BA8"
                    FontWeight="Bold" FontFamily="Felix Titling" Padding="5"
                    Margin="5" Click="AnswerBtn_Click"  Tag="3"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
