<UserControl x:Class="MovieQuizAdventure.SelectQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieQuizAdventure"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid>
        <Button x:Name="BackButton"
                Content="Back"
                Width="100" Height="40"
                Margin="25"
                Background="#1C1F3B"
                Foreground="#C3A6FF"
                BorderBrush="#5E5BA8"
                FontWeight="Bold"
                FontFamily="ROG Fonts"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BackButtonClick"
          />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical"> 
               
        <TextBlock Text="Select which quiz you want to play"
                   Foreground="#C3A6FF"
                   FontFamily="ROG Fonts"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20"/>

            <Button Content="Harry Potter Quiz"
                    Height="40" Width="200"
                    Background="#1C1F3B"
                    Foreground="#C3A6FF"
                    BorderBrush="#5E5BA8"
                    FontWeight="Bold"
                    FontFamily="ROG Fonts"
                    Click="GoToChoosenQuiz"
                    />

        </StackPanel>
    </Grid>
</UserControl>
