<UserControl x:Class="MovieQuizAdventure.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieQuizAdventure"
             mc:Ignorable="d"     >
  <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Result View – showing your score and result"
                   Foreground="#C3A6FF"
                   FontFamily="ROG Fonts"
                   FontSize="20"
                  />
            <StackPanel Orientation="Vertical"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Result"  Foreground="#C3A6FF"
                           FontFamily="ROG Fonts"
                           HorizontalAlignment="Center"
                           Margin="10 15 10 10"
                           FontSize="20"/>
                <TextBlock Text="10/15"  Foreground="#C3A6FF"
                           FontFamily="ROG Fonts"
                           HorizontalAlignment="Center"
                           Margin="10 0 10 15"
                           FontSize="20"/>
            </StackPanel>

            <Button x:Name="BackButton"
                Content="Back To Meny"
                Width="140" Height="40"
                Margin="25"
                Background="#1C1F3B"
                Foreground="#C3A6FF"
                BorderBrush="#5E5BA8"
                FontWeight="Bold"
                FontFamily="ROG Fonts"
               
                Click="BackToMenuButtonClick" />
        </StackPanel>
    </Grid>
</UserControl>
