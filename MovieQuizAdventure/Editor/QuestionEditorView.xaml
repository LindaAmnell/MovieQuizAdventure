<UserControl x:Class="MovieQuizAdventure.QuestionEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieQuizAdventure"
             mc:Ignorable="d" >

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
             <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                     <Button x:Name="BackButton"   Content="Back"
                                    Width="100" Height="40" Margin="10"
                                    Background="#1C1F3B" Foreground="#C3A6FF"
                                    BorderBrush="#5E5BA8" FontWeight="Bold"
                                    FontFamily="ROG Fonts"  HorizontalAlignment="Left"
                                    VerticalAlignment="Top" Click="BackButtonClick"/>

                    <TextBlock Grid.Row="0"  Text="Create or Edit Quiz"
                                       FontFamily="ROG Fonts" FontSize="24"
                                       FontWeight="Bold" Foreground="#C3A6FF"
                                       HorizontalAlignment="Center" Margin="0,10,0,20"/>

                        <StackPanel Grid.Row="2" HorizontalAlignment="Center">

                            <TextBlock Text="Quiz Name:"
                                               Foreground="#C3A6FF"  FontFamily="ROG Fonts"
                                               FontSize="18" Margin="0,10,0,5"/>
                            <TextBox x:Name="QuizNameTextBox"
                                     Text="Harry Potter Quiz" Padding="0 5"
                                     Background="#C3A6FF" Foreground="#1C1F3B"
                                     BorderBrush="#5E5BA8" FontFamily="ROG Fonts"
                                     FontWeight="Bold" FontSize="14" />   

                            <TextBlock Text="Question:"
                                                Foreground="#C3A6FF" FontFamily="ROG Fonts"
                                                FontSize="18"
                                                VerticalAlignment="Center"  Margin="0,10,0,5"/>
                            <TextBox x:Name="QuestionTextBox"
                                            Text="Who teaches Potions at Hogwarts during Harry’s first year?"
                                            Background="#C3A6FF"  Foreground="#1C1F3B"
                                            BorderBrush="#5E5BA8" FontFamily="ROG Fonts"
                                            Width="350" Padding="0 5"
                                            TextWrapping="Wrap"
                                            FontWeight="Bold" FontSize="14"
                                            Margin="0,0,0,5"/>

                             <TextBlock Text="Answer 1:"
                                         Foreground="#C3A6FF" FontFamily="ROG Fonts"
                                         FontSize="18" Margin="0,10,0,5"/>
                             <TextBox x:Name="Answer1TextBox"
                                      Text="Albus Dumbledore"
                                      Background="#C3A6FF"
                                      Padding="0 5"
                                      Foreground="#1C1F3B" BorderBrush="#5E5BA8"
                                      FontFamily="ROG Fonts" FontWeight="Bold"
                                      FontSize="14"/>

                              <TextBlock Text="Answer 2:"
                                         Foreground="#C3A6FF" FontFamily="ROG Fonts" 
                                         FontSize="18" Margin="0,10,0,5"/>
                              <TextBox x:Name="Answer2TextBox"
                                       Text="Minerva McGonagall"
                                       Padding="0 5" Background="#C3A6FF"
                                       Foreground="#1C1F3B" BorderBrush="#5E5BA8"
                                       FontFamily="ROG Fonts" FontWeight="Bold"
                                       FontSize="14"/>

                              <TextBlock Text="Answer 3:"
                                         Foreground="#C3A6FF" FontFamily="ROG Fonts"
                                         FontSize="18" Margin="0,10,0,5" />
                              <TextBox x:Name="Answer3TextBox"
                                        Background="#C3A6FF" Text="Severus Snape" Padding="0 5"
                                        Foreground="#1C1F3B" BorderBrush="#5E5BA8"
                                        FontFamily="ROG Fonts" FontWeight="Bold" FontSize="14"/>

                            <TextBlock Text="Answer 4:"
                                       Foreground="#C3A6FF" FontFamily="ROG Fonts"
                                       FontSize="18" Margin="0,10,0,5"/>
                            <TextBox x:Name="Answer4TextBox" Text="Rubeus Hagrid"
                                        Padding="0 5" Background="#C3A6FF"
                                        Foreground="#1C1F3B" BorderBrush="#5E5BA8"
                                        FontFamily="ROG Fonts" FontWeight="Bold" FontSize="14"/>

                            <TextBlock Text="Correct Answer (1-4):"
                                       Foreground="#C3A6FF"  FontFamily="ROG Fonts"
                                       FontSize="18" Margin="0,10,0,5"/>

                            <TextBox x:Name="CorrectAnswerTextBox"
                                     Text="3" Padding="7"
                                     Width="30" Background="#C3A6FF"
                                     Foreground="#1C1F3B" BorderBrush="#5E5BA8"
                                     FontFamily="ROG Fonts" FontWeight="Bold" 
                                     FontSize="14" HorizontalAlignment="Left" />    
                </StackPanel>
                    <Button Grid.Row="3"
                                Content="Save Quiz"
                                Width="150" Height="40" Background="#1C1F3B"
                                Foreground="#C3A6FF" BorderBrush="#5E5BA8"
                                FontWeight="Bold" FontFamily="ROG Fonts" Margin="20"
                                HorizontalAlignment="Center" Click="SaveQuizClick"/>    
            </Grid>
        </ScrollViewer>
</UserControl>
